<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import trashsoftware.trashSnooker.fxml.widgets.AbilityShower?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="trashsoftware.trashSnooker.fxml.CareerView"
          prefHeight="600.0" prefWidth="1000.0" vgap="10.0" hgap="20.0">

    <padding>
        <Insets topRightBottomLeft="10.0"/>
    </padding>

    <columnConstraints>
        <ColumnConstraints/>
        <ColumnConstraints/>
    </columnConstraints>

    <VBox GridPane.rowIndex="1" spacing="10.0">
        <AbilityShower fx:id="abilityShower"/>
        <HBox spacing="20.0" alignment="CENTER">
            <HBox alignment="CENTER">
                <Label text="可用技能点："/>
                <Label fx:id="availPerksLabel"/>
            </HBox>
            <Button text="重置" fx:id="clearPerkBtn" onAction="#clearUsedPerks"/>
            <Button text="确定分配" fx:id="confirmAddPerkBtn" onAction="#applyPerks"/>
        </HBox>
    </VBox>

    <Label text="斯诺克世界排名" GridPane.columnIndex="1">
        <font>
            <Font size="18.0"/>
        </font>
    </Label>

    <TableView fx:id="snookerRankingTable" prefWidth="300.0" prefHeight="400.0"
               GridPane.rowIndex="1" GridPane.columnIndex="1">
        <columns>
            <TableColumn text="排名" fx:id="snookerRankCol"/>
            <TableColumn text="球员" fx:id="snookerRankNameCol"/>
            <TableColumn text="奖金" fx:id="snookerAwardCol"/>
        </columns>
    </TableView>

    <Label fx:id="myRankLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    
    <Label fx:id="currentDateLabel" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <HBox fx:id="champInProgBox" GridPane.rowIndex="5" GridPane.columnIndex="1" spacing="10.0">
        <Label text="正在进行的比赛"/>
        <Label fx:id="champInProgLabel"/>
        <Label fx:id="champInProgStageLabel"/>
        <Button text="继续" onAction="#continueChampInProg"/>
    </HBox>

    <HBox fx:id="nextChampInfoBox" GridPane.rowIndex="5" GridPane.columnIndex="1" spacing="10.0">
        <Label text="下场比赛"/>
        <Label fx:id="nextChampionshipLabel"/>
        <CheckBox fx:id="joinChampBox" text="报名"/>
        <Button text="开始" onAction="#nextChamp"/>
    </HBox>

</GridPane>
