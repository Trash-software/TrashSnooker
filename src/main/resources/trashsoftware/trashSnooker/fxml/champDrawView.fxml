<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="trashsoftware.trashSnooker.fxml.ChampDrawView"
      prefHeight="700.0" prefWidth="1000.0">

    <padding>
        <Insets topRightBottomLeft="10.0"/>
    </padding>

    <Label fx:id="champNameLabel"/>

    <ScrollPane prefHeight="600.0" prefWidth="980.0">
        <Canvas fx:id="treeCanvas"/>
    </ScrollPane>

    <HBox spacing="10.0">
        <Label fx:id="currentStageLabel"/>
        <Button fx:id="nextRoundButton" onAction="#nextRound" text="开始下一轮"/>
    </HBox>
</VBox>
