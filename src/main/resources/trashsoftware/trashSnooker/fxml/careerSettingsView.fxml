<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import trashsoftware.trashSnooker.fxml.widgets.GamePane?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="trashsoftware.trashSnooker.fxml.CareerSettingsView"
          prefHeight="320.0" prefWidth="240.0" spacing="10.0">
    
    <padding>
        <Insets topRightBottomLeft="10.0"/>
    </padding>
    
    <GridPane vgap="10.0" hgap="20.0" VBox.vgrow="ALWAYS">
        <Label text="%difficulty" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <ComboBox fx:id="playerGoodnessBox" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <Label text="%aiGoodness" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="aiGoodnessBox" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox alignment="BOTTOM_RIGHT" spacing="10.0">
        <Button text="%confirm" onAction="#confirmAction"/>
        <Button text="%cancel" onAction="#cancelAction"/>
    </HBox>

</VBox>
