<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.CheckBox?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="trashsoftware.trashSnooker.fxml.statsViews.StatsView"
      prefHeight="720.0" prefWidth="1200.0" spacing="5.0">

    <padding>
        <Insets topRightBottomLeft="10.0"/>
    </padding>

    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <Button text="%backIcon" onAction="#backAction"/>
        
        <CheckBox fx:id="careerOnlyBox" text="%statsCareerGameOnly"/>
    </HBox>

    <HBox VBox.vgrow="ALWAYS">
        <TreeView fx:id="treeView" prefWidth="400.0">

        </TreeView>

        <ScrollPane HBox.hgrow="ALWAYS">
            <VBox fx:id="rightPane" alignment="TOP_CENTER">
                <padding>
                    <Insets topRightBottomLeft="10.0"/>
                </padding>
            </VBox>
        </ScrollPane>

    </HBox>

</VBox>
